<div id="loader" class="loader-wrapper">
	<span class="loader"></span>
</div>

<script lang="ts">
	function loader() {
		const loader = document.querySelector('#loader');

		window.addEventListener('load', () => {
			setTimeout(() => {
				loader.classList.add('loader-wrapper--hidden');
			}, 1000);
		});
	}

	loader();
</script>

<style lang="scss">
	.loader-wrapper {
		position: absolute;
		top: 0;
		left: 0;
		z-index: 999;
		display: flex;
		align-items: center;
		justify-content: center;
		width: 100%;
		height: 100%;
		background-color: #263038;
		transition: opacity 0.2s ease-in;

		&--hidden {
			pointer-events: none;
			opacity: 0;
		}
	}

	.loader {
		position: relative;
		display: inline-block;
		width: 400px;
		height: 4.8px;
		overflow: hidden;
		background: hsl(0deg 0% 100% / 14.9%);

		@media (width <= 412px) {
			width: 280px;
		}

		@media (width <= 300px) {
			width: 200px;
		}
	}

	.loader::after {
		position: absolute;
		top: 0;
		left: 0;
		box-sizing: border-box;
		width: 192px;
		height: 4.8px;
		content: '';
		background: #fff;
		animation: animloader 1.2s linear infinite;
	}

	@keyframes animloader {
		0% {
			left: 0;
			transform: translateX(-100%);
		}

		100% {
			left: 100%;
			transform: translateX(0%);
		}
	}
</style>
